<% content_for :body_type do%>
signup<% end %>


<div class="signupnew">
	<h2>Sign up</h2>
	<h4>Get your free account today</h4>
</div>

<div class="col-md-6 col-sm-6 col-xs-6 col-md-offset-2 col-sm-offset-2">
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: "Email" %></div>

  <div>
    <%= f.password_field :password, autocomplete: "off", hide_label: true, placeholder: "Password" %></div>

  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true, placeholder: "Password Confirmation" %></div>

  <div id="signupbuttons"><%= f.submit "Sign up", class: "btn btn-primary" %> or <span> <%= link_to "Back", root_path, class: "btn btn-info" %></span></div>
<% end %>

