<% content_for :body_type do%>
  goalsedit
<% end %>

<div class="col-md-4 col-sm-4 col-xs-6 col-md-offset-4 col-sm-offset-4">
  <h3>Edit your goal</h3>
  <%= bootstrap_form_for([@master_goal, @task]) do |f| %>
    <%= label_tag(:day_task_name, "Current goal") %>
    <%= f.text_field :day_task_name, hide_label: true  %></br>
    <%= label_tag(:day, "Day") %>
    <%= f.text_field :day, hide_label: true  %></br>
    <%= label_tag(:month, "Month") %>
    <%= f.text_field :month, hide_label: true  %></br>
    <%= label_tag(:year, "Year") %>
    <%= f.text_field :year, hide_label: true  %></br>
    <%= f.submit "Update", class: "btn btn-primary" %>
  <%end%>
  <%= link_to "Remove", goal_day_path(@master_goal, @task, week:@week), method: 'delete', :confirm => 'Are you sure?'%>
</div>