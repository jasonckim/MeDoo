<div class="stickynotes">
<% @goals.each do |goal| %>
<ul>
  <li>
      <h2 class="stickyheader">Goal: <%= goal.name %></h2>
      <p class="sticky">Details: <%= goal.description %></p>
      <p class="sticky"><%= link_to "Edit", edit_goal_path(goal.id)%> / <span><%= link_to "Remove", goal_path(goal.id), method: 'delete' %></span></p>

  </li>
</ul>
<% end %>
</div>



